<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_service"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_250dp"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginLeft="@dimen/size_10dp"
    android:layout_marginRight="@dimen/size_10dp"
    app:cardElevation="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_category"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Salom Dunyo"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/size_10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp"
                android:layout_marginTop="@dimen/size_5dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:alpha="0.6"
                android:padding="@dimen/size_10dp"
                />
        </RelativeLayout>

</androidx.cardview.widget.CardView>