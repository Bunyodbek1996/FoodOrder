<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_10dp"
    android:layout_marginRight="@dimen/size_10dp"
    app:cardElevation="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_10dp"
    android:layout_marginBottom="@dimen/size_15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/close_tv"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textStyle="bold"
            android:paddingRight="@dimen/size_20dp"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingTop="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_10dp"
            android:textSize="@dimen/text_18sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@color/blackText"
            android:alpha="0.7"
            />
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:id="@+id/linear_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end">
                    <TextView
                        android:id="@+id/working_hours_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:scaleY="0.9"
                        android:text="00:00-00:00"
                        android:textColor="@color/whiteText"
                        android:textSize="@dimen/text_11sp"
                        android:padding="@dimen/size_5dp"
                        android:background="@color/blackText"
                        android:alpha="0.8"
                        android:layout_marginTop="-2dp"
                        android:shadowColor="@color/blackText"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"/>
                    <ImageView
                        android:id="@+id/image_favorite"
                        android:layout_width="@dimen/size_30dp"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/size_4dp"
                        android:src="@drawable/favorite_accent_border_icon" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/image_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200dp"
                    android:scaleType="centerCrop"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/size_70dp"
                    android:layout_height="@dimen/size_70dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/size_5dp">

                    <ImageView
                        android:id="@+id/image_logo"
                        android:layout_width="@dimen/size_70dp"
                        android:layout_height="@dimen/size_70dp"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:padding="@dimen/size_5dp"
                    android:orientation="vertical"
                    android:background="@drawable/back_restaurant_name"
                    android:backgroundTint="#B255A128">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:scaleY="0.9"
                        android:text=""
                        android:textColor="@color/whiteText"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="9"
                android:orientation="horizontal"
                android:minHeight="@dimen/size_15dp"
                android:padding="@dimen/size_10dp">
                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:alpha="0.5"
                    android:layout_marginRight="@dimen/size_5dp"
                    tools:ignore="Suspicious0dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:minHeight="@dimen/size_15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/size_16dp"
                            android:layout_height="@dimen/size_22dp"
                            android:src="@drawable/watch_icon"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_marginLeft="@dimen/size_2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery"
                            android:textSize="@dimen/text_11sp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/delivery_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12sp"
                        android:text="[30:00 - 45:00]"
                        android:textColor="@color/blackText"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:alpha="0.5"
                    tools:ignore="Suspicious0dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/size_22dp"
                            android:layout_height="@dimen/size_22dp"
                            android:src="@drawable/icon_money"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/min_order_price"
                            android:textSize="@dimen/text_11sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/min_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15000 so'm"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/blackText"
                        android:layout_marginLeft="@dimen/size_5dp"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:alpha="0.5"
                    android:layout_marginRight="@dimen/size_5dp"
                    tools:ignore="Suspicious0dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/size_22dp"
                            android:layout_height="@dimen/size_22dp"
                            android:src="@drawable/ic_delivery"
                            android:alpha="0.5"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/size_3dp"
                            android:paddingTop="@dimen/size_2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_price"
                            android:textSize="@dimen/text_11sp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/blackText"
                        android:textSize="@dimen/text_12sp"
                        android:layout_marginLeft="@dimen/size_3dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:alpha="0.5"
                    android:layout_marginRight="@dimen/size_5dp"
                    tools:ignore="Suspicious0dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>