<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10dp"
    android:paddingRight="@dimen/size_10dp"
    android:paddingLeft="@dimen/size_10dp"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/size_80dp"
                android:layout_height="@dimen/size_80dp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/size_10dp">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_80dp"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5dp">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Salom Dunyo"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/text_14sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/size_5dp"/>
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Salom Dunyo"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/text_11sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_below="@+id/product_name"/>
                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="@dimen/size_200dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxEms="40"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/text_9sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_below="@+id/product_price"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/size_10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_plus_minus"
                android:layout_marginTop="@dimen/size_10dp">
                <TextView
                    android:id="@+id/btn_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/text_18sp"
                    android:paddingLeft="@dimen/size_15dp"
                    android:paddingTop="@dimen/size_4dp"
                    android:paddingRight="@dimen/size_10dp"
                    android:paddingBottom="@dimen/size_4dp"/>
                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/text_18sp"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingTop="@dimen/size_4dp"
                    android:paddingRight="@dimen/size_5dp"
                    android:paddingBottom="@dimen/size_4dp"/>

                <TextView
                    android:id="@+id/btn_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_10dp"
                    android:paddingTop="@dimen/size_4dp"
                    android:paddingRight="@dimen/size_15dp"
                    android:paddingBottom="@dimen/size_4dp"
                    android:text="+"
                    android:textSize="@dimen/text_18sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/btn_remove"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:src="@drawable/delete_icon"
                android:layout_gravity="center"
                android:padding="@dimen/size_7dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#888"
        android:layout_marginTop="@dimen/size_10dp"/>
</LinearLayout>