<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10dp"
    android:paddingRight="@dimen/size_10dp"
    android:paddingLeft="@dimen/size_10dp"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/size_80dp"
                android:layout_height="@dimen/size_80dp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/size_10dp">

                <ImageView
                    android:id="@+id/restaurant_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_80dp"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5dp">
                <TextView
                    android:id="@+id/restaurant_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/text_14sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/size_5dp"/>
                <TextView
                    android:id="@+id/order_id_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/text_11sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_below="@+id/restaurant_name_textview"/>
                <TextView
                    android:id="@+id/order_status_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/size_5dp"
                    android:paddingEnd="@dimen/size_5dp"
                    android:visibility="gone"
                    android:textSize="@dimen/text_9sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:background="@color/colorAccent"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_below="@+id/order_id_textview"/>
                <TextView
                    android:id="@+id/orders_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/text_14sp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cancel_order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text_14sp"
                    android:background="@drawable/background_category"
                    android:backgroundTint="@color/white"
                    android:textColor="#BC1A1A"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:padding="@dimen/size_7dp"
                    android:layout_below="@+id/order_id_textview"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#888"
        android:layout_marginTop="@dimen/size_10dp"/>
</LinearLayout>