<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10dp"
    android:paddingRight="@dimen/size_10dp"
    android:paddingLeft="@dimen/size_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/size_10dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />
            <ImageView
                android:id="@+id/default_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_90dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:gravity="center"
                android:text="Salom Dunyo"
                android:textColor="@color/blackText"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:gravity="center"
                android:text="Salom Dunyo"
                android:textColor="@color/blackText"
                android:textSize="@dimen/text_11sp" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:gravity="center"
                android:text="Salom Dunyo"
                android:textColor="@color/blackText"
                android:textSize="@dimen/text_9sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/add_to_cart_iv"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:padding="@dimen/size_10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/size_50dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="@dimen/size_5dp"
            android:src="@drawable/ic_add_circle_primary_24dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#888"
        android:layout_marginTop="@dimen/size_10dp"/>
</LinearLayout>